public class Abgabe32 {
    
    /**
	 * Berechnet die Zweierpotenz 2^n für die Eingabe n. Für negative Werte liefert die Methode den Ergebniswert -1.
	 * 
	 * @param n Der Exponent
	 * @return Den Potenzwert 2^n 
	 */
    public static int powerOfTwo (int n)
    {
        int result = -1;
        if (n < 0)
            {
                return result;
            }
        else {
                result = 1;
                for (int i = 0; i <= n; i++)
                    result *= 2;
                return result;
            }
            
        
        
        
        
        
    }
    
    
}
